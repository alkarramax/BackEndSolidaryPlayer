<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastro</servlet-name>
        <servlet-class>controller.cadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deletePlayers</servlet-name>
        <servlet-class>controller.deletePlayers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarEntidade</servlet-name>
        <servlet-class>controller.cadastrarEntidade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCEntidadeDAO</servlet-name>
        <servlet-class>DAO.JDBCEntidadeDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteEntidade</servlet-name>
        <servlet-class>controller.deleteEntidade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editarEntidade</servlet-name>
        <servlet-class>controller.editarEntidade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deslogar</servlet-name>
        <servlet-class>controller.deslogar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarDoacao</servlet-name>
        <servlet-class>controller.cadastrarDoacao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarCampanha</servlet-name>
        <servlet-class>controller.cadastrarCampanha</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastro</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deletePlayers</servlet-name>
        <url-pattern>/deletePlayers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarEntidade</servlet-name>
        <url-pattern>/cadastrarEntidade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCEntidadeDAO</servlet-name>
        <url-pattern>/JDBCEntidadeDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteEntidade</servlet-name>
        <url-pattern>/deleteEntidade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarEntidade</servlet-name>
        <url-pattern>/editarEntidade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deslogar</servlet-name>
        <url-pattern>/deslogar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarDoacao</servlet-name>
        <url-pattern>/cadastrarDoacao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarCampanha</servlet-name>
        <url-pattern>/cadastrarCampanha</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
